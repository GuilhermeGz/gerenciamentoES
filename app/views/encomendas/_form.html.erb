<%= form_with(model: encomenda) do |form| %>
  <% if encomenda.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(encomenda.errors.count, "error") %> prohibited this encomenda from being saved:</h2>

      <ul>
        <% encomenda.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :remetente %>
    <%= form.text_field :remetente %>
  </div>

  <div class="field">
    <%= form.label :data %>
    <%= form.date_field :data %>
  </div>

  <div class="field">
    <%= form.label :morador_id %>
    <%= form.collection_select(:morador_id, Morador.all, :id, :nome,{:selected => @encomenda.morador_id})%>
  </div>

  <div>
    <% if user_signed_in? %>
      <%= form.hidden_field :user_id, value: current_user.id , :id => 'id_user'%>
    <% else %>
      <label name="user_id">Funcionario</label>
      <%= form.collection_select(:user_id, User.all, :id, :nome,{:selected => @encomenda.user_id})%>
      <br><br>
    <%end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
